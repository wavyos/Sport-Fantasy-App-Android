<?xml version="1.0" encoding="utf-8"?>
<layout xmlns="http://www.w3.org/">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Player"
                android:textColor="@color/bg" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civ_player"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_gravity="top"
                    android:layout_marginStart="10dp"
                    android:layout_weight="0.2"
                    android:src="@drawable/league_joined" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_east_player_name"
                        style="@style/row_top_player"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto_regular"
                        android:maxLines="1"
                        android:text="@string/s_curry"
                        android:textAlignment="textStart"
                        android:textSize="14sp"
                        tools:ignore="RtlCompat" />

                    <TextView
                        android:id="@+id/tv_positiontype"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:text="@string/pg_sm"
                        android:textAlignment="textStart"
                        android:textSize="12sp"
                        android:visibility="gone"
                        tools:ignore="RtlCompat" />

                    <TextView
                        android:id="@+id/tv_primaryposition"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:text="@string/healthy"
                        android:textAlignment="textStart"
                        android:textSize="12sp"
                        android:visibility="gone"
                        tools:ignore="RtlCompat" />


                    <TextView
                        android:id="@+id/tv_east_add"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="3dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="start"
                        android:maxLines="1"
                        android:paddingBottom="20dp"
                        android:text="@string/add"
                        android:textColor="@color/black"
                        android:textStyle="bold" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="-12dp"
            android:layout_marginBottom="5dp"
            android:alpha="0.4"
            android:background="@drawable/small_size_dash"
            android:visibility="gone" />


    </LinearLayout>
</layout>