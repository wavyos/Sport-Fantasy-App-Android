<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#A3000000"
    android:gravity="center"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center"
        android:background="@drawable/rounded_corners_sheet">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_btm_sheet_logo"
            android:src="@drawable/btmsheet_top_line"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:id="@+id/img_btmsheet_logo"
            android:src="@drawable/league_joined"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:layout_gravity="center">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerInParent="true"
                android:backgroundTint="@color/bg"
                android:background="@drawable/rounded_home_card_item"/>
            <TextView
                android:id="@+id/tv_title_btmsheet_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_bold"
                android:paddingHorizontal="15dp"
                android:gravity="center"
                android:text="@string/str_setting_delete_league"
                android:textColor="@color/black"
                android:textColorHint="@color/stroke_color"
                android:textSize="18sp" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:layout_marginHorizontal="25dp"
            android:layout_marginVertical="10dp"
            android:text="@string/str_setting_delete_league_msg"
            android:textColor="@color/stroke_color"
            android:textColorHint="@color/stroke_color"
            android:textSize="15sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/btn_delete_league"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="15dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#D32929"
            android:background="@drawable/rounded_edittext">

            <ImageView
                android:id="@+id/img_kick_promote"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_baseline_check"
                app:tint="@color/white" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/tv_kick_text"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:text="@string/str_setting_delete_league"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/btn_delete_cancel"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="15dp"
            android:background="@drawable/rounded_edittext">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/_ic_close_"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/text_color"
                android:textSize="14sp" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>