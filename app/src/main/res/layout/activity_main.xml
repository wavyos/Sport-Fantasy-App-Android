<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/bg"
        android:id="@+id/btm_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingEnd="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_app_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_bold"
                android:gravity="start|center_vertical"
                android:text="@string/app_name"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:padding="5dp"
                android:id="@+id/img_logout"
                android:layout_gravity="center_vertical"
                android:src="@drawable/logout_ico"/>

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:padding="5dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/notification_bell"/>

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:background="@color/main_activity_bg">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/check_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cardview_light_background"
                android:orientation="horizontal"
                android:visibility="gone">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:outlineSpotShadowColor="@color/black"
                    app:cardBackgroundColor="@color/bg"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp"
                    app:cardMaxElevation="10dp"
                    app:cardPreventCornerOverlap="true"
                    tools:targetApi="p">

                    <TextView
                        android:id="@+id/tv_login"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="@string/login"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        app:drawableRightCompat="@drawable/ic_baseline_arrow_circle_right_24" />


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:outlineSpotShadowColor="@color/black"
                    app:cardBackgroundColor="@color/bg"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp"
                    app:cardMaxElevation="10dp"
                    app:cardPreventCornerOverlap="true"
                    tools:targetApi="p">

                    <TextView
                        android:id="@+id/tv_signup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="@string/sign_up"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        app:drawableRightCompat="@drawable/ic_baseline_arrow_circle_right_24" />


                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="2dp"
                    app:cardBackgroundColor="@color/black"
                    app:cardCornerRadius="10dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/black"
                        android:layout_gravity="center">

                        <androidx.media3.ui.PlayerView
                            android:id="@+id/home_video_view"
                            android:background="@color/black"
                            android:layout_width="match_parent"
                            app:scrubber_drawable="@drawable/main_thumb"
                            android:layout_height="match_parent"/>

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:scaleType="centerCrop"
                            android:visibility="gone"
                            android:layout_gravity="center"
                            android:id="@+id/img_play_pause"
                            android:src="@drawable/play_circle"/>

                    </FrameLayout>

                </androidx.cardview.widget.CardView>

                <!-- if login user-->

                <LinearLayout
                    android:id="@+id/ll_create_join"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        app:cardBackgroundColor="@color/bg"
                        android:layout_marginEnd="15dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="1dp"
                        app:cardPreventCornerOverlap="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingHorizontal="10dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/LL_Create_League"
                                android:layout_width="0dp"
                                android:layout_weight="0.1"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="10dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_medium"
                                    android:text="@string/create_your_new_leauge"
                                    android:textColor="@color/white"
                                    android:textSize="16sp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_light"
                                    android:textColor="@color/white"
                                    android:text="@string/start_your_own_league_and_invite_friends"
                                    android:textSize="12sp" />


                            </LinearLayout>


                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="end|center_vertical"
                                android:src="@drawable/right_arrow"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="10dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="1dp"
                        app:cardPreventCornerOverlap="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingHorizontal="10dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/LL_join_League"
                                android:layout_width="0dp"
                                android:layout_weight="0.1"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="10dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_medium"
                                    android:textColor="@color/black"
                                    android:text="@string/join_your_new_leauge"
                                    android:textSize="16sp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_light"
                                    android:text="@string/join_league_and_play_with_public"
                                    android:textSize="12sp" />


                            </LinearLayout>


                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="end|center_vertical"
                                android:src="@drawable/right_arrow"
                                app:tint="@color/black" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <TextView
                    android:id="@+id/tv_welcome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:text="@string/welcome_antonio_george"
                    android:textColor="@color/bg"
                    android:textSize="21sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:paddingStart="5dp"
                    android:text="My Leagues"
                    android:textColor="@color/black"
                    android:textSize="21sp" />

                <!-- end login user-->



                <!-- if you can joi leage  -->


                <LinearLayout
                    android:id="@+id/ll_card_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">


                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:id="@+id/shimmer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:orientation="horizontal">

                            <include layout="@layout/row_league_list"/>

                        </LinearLayout>


                    </com.facebook.shimmer.ShimmerFrameLayout>

                    <LinearLayout
                        android:id="@+id/CL_rv_league_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_league_list"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginHorizontal="10dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ru.tinkoff.scrollingpagerindicator.ScrollingPagerIndicator
                            android:id="@+id/indicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:padding="10dp"
                            android:visibility="gone"
                            app:spi_dotColor="@color/black"
                            app:spi_dotSelectedColor="@color/bg"
                            app:spi_visibleDotCount="5" />

                        <me.relex.circleindicator.CircleIndicator2
                            android:id="@+id/indicator2"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_marginBottom="20dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            app:ci_drawable="@drawable/selected_row"
                            app:ci_drawable_unselected="@drawable/selected_row_disable"
                            app:ci_height="8sp"
                            app:ci_width="8sp" />


                    </LinearLayout>


                </LinearLayout>

                <!-- end you can joi leage  -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:visibility="visible">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tv_news"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="1dp"
                            android:layout_weight="1"
                            android:background="@drawable/ic_news_bg_text_left"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center"
                            android:text="@string/news"
                            android:textColor="@color/black"
                            android:textSize="14sp" />


                        <TextView
                            android:id="@+id/tv_top_player"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="1dp"
                            android:layout_weight="1"
                            android:background="@drawable/ic_news_bg_text_right_blank"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center"
                            android:padding="15dp"
                            android:text="@string/top_player"
                            android:textColor="@color/black"
                            android:textSize="14sp" />


                    </LinearLayout>

                    <FrameLayout
                        android:id="@+id/news_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible" />

                    <FrameLayout
                        android:id="@+id/player_container"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone" />


                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

<!--                    Top players-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.core.widget.NestedScrollView
                            android:id="@+id/NSV_Main"
                            android:visibility="visible"
                            android:layout_width="match_parent"
                            android:fitsSystemWindows="true"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/ll_news"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingHorizontal="18dp"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:textColor="@color/black"
                                            android:fontFamily="@font/roboto_bold"
                                            android:text="@string/news"
                                            android:textSize="18sp" />

                                        <TextView
                                            android:id="@+id/tv_news_more"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="end"
                                            android:fontFamily="@font/roboto_bold"
                                            android:padding="5dp"
                                            android:text="@string/str_view_all"
                                            android:textColor="@color/bg"
                                            android:textSize="14sp" />

                                    </LinearLayout>

                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/rv_news"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginHorizontal="10dp"
                                        android:nestedScrollingEnabled="false"
                                        android:orientation="vertical"
                                        android:visibility="visible"
                                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                        tools:itemCount="2"
                                        tools:listitem="@layout/row_news_latest" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/Ll_top_player_all"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@color/white"
                                    android:orientation="vertical"
                                    android:layout_marginTop="10dp"
                                    android:visibility="visible">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingHorizontal="18dp"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/tv_top_player_title"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:textColor="@color/black"
                                            android:fontFamily="@font/roboto_bold"
                                            android:text="@string/str_top_players_title"
                                            android:textSize="18sp" />

                                        <TextView
                                            android:id="@+id/tv_more"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="end"
                                            android:fontFamily="@font/roboto_bold"
                                            android:padding="5dp"
                                            android:text="@string/str_view_all"
                                            android:textColor="@color/bg"
                                            android:textSize="14sp" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/horizontal_linear"
                                        android:layout_width="match_parent"
                                        android:layout_height="40dp"
                                        android:orientation="horizontal"
                                        android:paddingStart="10dp"
                                        android:visibility="visible">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            android:padding="10dp"
                                            android:visibility="visible">

                                            <TextView
                                                android:layout_width="40dp"
                                                android:layout_height="wrap_content"
                                                android:layout_marginEnd="10dp"
                                                android:fontFamily="@font/roboto_bold"
                                                android:text="@string/str_index_no"
                                                android:textColor="@color/bg" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            android:padding="10dp"
                                            android:visibility="visible">

                                            <TextView
                                                android:layout_width="100dp"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="10dp"
                                                android:layout_marginEnd="10dp"
                                                android:fontFamily="@font/roboto_bold"
                                                android:text="@string/player"
                                                android:textColor="@color/bg" />

                                        </LinearLayout>

                                        <HorizontalScrollView
                                            android:id="@+id/hv_scroll_header"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:scrollbars="none">

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginStart="-10dp"
                                                android:clickable="false"
                                                android:focusableInTouchMode="false"
                                                android:orientation="horizontal"
                                                android:paddingTop="10dp"
                                                android:paddingBottom="10dp"
                                                android:touchscreenBlocksFocus="false"
                                                android:visibility="visible">

                                                <TextView
                                                    android:layout_width="75dp"
                                                    android:layout_height="wrap_content"
                                                    android:fontFamily="@font/roboto_bold"
                                                    android:gravity="center"
                                                    android:text="@string/str_pos"
                                                    android:textColor="@color/bg" />

                                                <TextView
                                                    android:layout_width="75dp"
                                                    android:layout_height="wrap_content"
                                                    android:fontFamily="@font/roboto_bold"
                                                    android:gravity="center"
                                                    android:text="@string/points"
                                                    android:textColor="@color/bg" />

                                                <TextView
                                                    android:layout_width="75dp"
                                                    android:layout_height="wrap_content"
                                                    android:fontFamily="@font/roboto_bold"
                                                    android:gravity="center"
                                                    android:text="@string/salary"
                                                    android:textColor="@color/bg" />

                                                <TextView
                                                    android:layout_width="70dp"
                                                    android:layout_height="wrap_content"
                                                    android:fontFamily="@font/roboto_bold"
                                                    android:gravity="center"
                                                    android:text="@string/fgm"
                                                    android:textColor="@color/bg" />

                                                <TextView
                                                    android:layout_width="70dp"
                                                    android:layout_height="wrap_content"
                                                    android:fontFamily="@font/roboto_bold"
                                                    android:gravity="center"
                                                    android:text="@string/_3pts"
                                                    android:textColor="@color/bg" />

                                                <TextView
                                                    android:layout_width="70dp"
                                                    android:layout_height="wrap_content"
                                                    android:fontFamily="@font/roboto_bold"
                                                    android:gravity="center"
                                                    android:text="@string/reb"
                                                    android:textColor="@color/bg" />

                                                <TextView
                                                    android:layout_width="70dp"
                                                    android:layout_height="wrap_content"
                                                    android:fontFamily="@font/roboto_bold"
                                                    android:gravity="center"
                                                    android:text="@string/ft"

                                                    android:textColor="@color/bg" />

                                                <TextView
                                                    android:layout_width="70dp"
                                                    android:layout_height="wrap_content"
                                                    android:fontFamily="@font/roboto_bold"
                                                    android:gravity="center"
                                                    android:text="@string/blk"
                                                    android:textColor="@color/bg" />


                                                <TextView
                                                    android:layout_width="70dp"
                                                    android:layout_height="wrap_content"
                                                    android:fontFamily="@font/roboto_bold"
                                                    android:gravity="center"
                                                    android:text="@string/ast"
                                                    android:textColor="@color/bg" />


                                                <TextView
                                                    android:layout_width="70dp"
                                                    android:layout_height="wrap_content"
                                                    android:fontFamily="@font/roboto_bold"
                                                    android:gravity="center"
                                                    android:text="@string/stl"

                                                    android:textColor="@color/bg" />


                                                <TextView
                                                    android:layout_width="70dp"
                                                    android:layout_height="wrap_content"
                                                    android:fontFamily="@font/roboto_bold"
                                                    android:gravity="center"
                                                    android:text="@string/tov"

                                                    android:textColor="@color/bg" />


                                            </LinearLayout>

                                        </HorizontalScrollView>

                                    </LinearLayout>


                                    <androidx.core.widget.NestedScrollView
                                        android:id="@+id/scroll_nested"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:visibility="visible">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <androidx.recyclerview.widget.RecyclerView
                                                android:id="@+id/rv_players_name"
                                                android:layout_width="wrap_content"
                                                android:layout_height="match_parent"
                                                android:nestedScrollingEnabled="false"
                                                android:orientation="vertical"
                                                android:visibility="visible"
                                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                                tools:itemCount="5"
                                                tools:listitem="@layout/row_player_column" />

                                            <HorizontalScrollView
                                                android:id="@+id/hv_all_position"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_toRightOf="@id/rv_players_column"
                                                android:scrollbars="none">

                                                <androidx.recyclerview.widget.RecyclerView
                                                    android:id="@+id/rv_players_details"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="match_parent"
                                                    android:nestedScrollingEnabled="false"
                                                    android:visibility="visible"
                                                    tools:itemCount="5"
                                                    tools:listitem="@layout/row_player_pg" />
                                            </HorizontalScrollView>

                                        </LinearLayout>

                                    </androidx.core.widget.NestedScrollView>


                                </LinearLayout>

                            </LinearLayout>

                        </androidx.core.widget.NestedScrollView>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <ProgressBar
            android:id="@+id/pb_bar"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerInParent="true"
            android:visibility="gone" />



    </RelativeLayout>

