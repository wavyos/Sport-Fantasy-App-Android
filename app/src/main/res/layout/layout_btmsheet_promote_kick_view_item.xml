<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#A3000000"
    android:gravity="center"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center"
        android:background="@drawable/rounded_corners_sheet">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_btm_sheet_logo"
            android:src="@drawable/btmsheet_top_line"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:id="@+id/img_btmsheet_logo"
            android:src="@drawable/team_two_img"/>

        <TextView
            android:id="@+id/tv_selected_max_player_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="25dp"
            android:text="Alex Gu"
            android:textColor="@color/black"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/tv_max_popup_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:layout_marginHorizontal="25dp"
            android:visibility="gone"
            android:text="You and a friend earn coins when they sign up for Dream Team! Refer up to 10 people!"
            android:textColor="@color/stroke_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_popup_ref_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="25dp"
            android:visibility="gone"
            android:text="Your Code: A678FB"
            android:textColor="@color/bg"
            android:textSize="21sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/bg"
            android:id="@+id/btn_promote_manager"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="15dp"
            android:background="@drawable/rounded_edittext">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/promote_arrow"/>
            <TextView
                android:id="@+id/tv_promote_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:text="@string/str_promote_to_manager"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/bg"
            android:id="@+id/btn_view_profile"
            android:orientation="horizontal"
            android:visibility="gone"
            android:gravity="center"
            android:padding="15dp"
            android:background="@drawable/rounded_edittext">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/btm_profile"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:text="View Profile"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/btn_kick_from_league"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="15dp"
            android:background="@drawable/rounded_edittext">

            <ImageView
                android:id="@+id/img_kick_promote"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/_ic_close_"
                app:tint="@color/stroke_color" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/tv_kick_text"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:text="@string/str_kick_from_league"
                android:textColor="@color/stroke_color"
                android:textSize="14sp" />

        </LinearLayout>


        <TextView
            android:id="@+id/btn_sheet_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:background="@drawable/rounded_edittext"
            android:focusable="true"
            android:visibility="gone"
            android:backgroundTint="@color/bg"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:padding="15dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:textSize="14sp" />


    </LinearLayout>

</LinearLayout>