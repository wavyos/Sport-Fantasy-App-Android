<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#E8EEF4"
        tools:context=".Fragment.T_PlayoffFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_header_playoff"
            android:visibility="gone"
            android:elevation="20dp">
            <include layout="@layout/custom_app_bar" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_round_title"
            android:layout_gravity="center"
            android:text="Round 1"
            android:background="@drawable/custom_card"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginBottom="10dp"
            android:paddingVertical="10dp"
            android:layout_marginTop="-10dp"
            android:paddingHorizontal="130dp"/>

        <androidx.viewpager.widget.ViewPager
            android:layout_width="match_parent"
            android:background="#E8EEF4"
            android:layout_height="match_parent"
            android:id="@+id/viewpager_playoff"/>


        <!--<HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#E8EEF4"
            android:id="@+id/frame_layout_play_off"
            android:layout_gravity="center"
            android:paddingRight="10dp"
            android:fillViewport="true">

        </HorizontalScrollView>-->


    </LinearLayout>
</layout>