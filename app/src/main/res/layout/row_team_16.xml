<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="10dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/iv_team1"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/logo"/>

            <TextView
                android:id="@+id/tv_team_name_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:textSize="16sp"
                android:layout_toRightOf="@+id/iv_team1"
                android:layout_marginStart="10dp"
                android:text="Team Name"/>

            <TextView
                android:layout_below="@+id/tv_team_name_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_team1"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/roboto_medium"
                android:textSize="14sp"
                android:alpha="0.6"
                android:text="@string/team_name"/>

            <TextView
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_marginStart="10dp"
                android:fontFamily="@font/roboto_medium"
                android:textSize="16sp"
                android:alpha="0.6"
                android:text="0"/>


        </RelativeLayout>


        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/iv_team2"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/logo"/>

            <TextView
                android:id="@+id/tv_team_name_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:textSize="16sp"
                android:layout_toRightOf="@+id/iv_team2"
                android:layout_marginStart="10dp"
                android:text="Team Name"/>

            <TextView
                android:layout_below="@+id/tv_team_name_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_team2"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/roboto_medium"
                android:textSize="14sp"
                android:alpha="0.6"
                android:text="@string/team_name"/>

            <TextView
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/roboto_medium"
                android:textSize="16sp"
                android:alpha="0.6"
                android:text="0"/>


        </RelativeLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>