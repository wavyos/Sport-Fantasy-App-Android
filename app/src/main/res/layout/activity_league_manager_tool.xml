<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Activities.LeagueManagerToolActivity">

    <include layout="@layout/custom_app_bar"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@mipmap/background_app_af"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"
        android:text="@string/league_manager_tool"
        android:textColor="@color/white"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="-45dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_edit_basic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="17dp"
            android:text="@string/edit_basic_league"
            android:textSize="18sp"
            android:textColor="@color/text_color"
            android:fontFamily="@font/roboto_medium"
            app:drawableEndCompat="@drawable/pass_arrow" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:alpha="0.5"
            android:background="@drawable/line_dash" />

        <TextView
            android:id="@+id/tv_edit_team_manager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="15dp"
            android:text="@string/edit_team_manager"
            android:textSize="18sp"
            android:textColor="@color/text_color"
            android:fontFamily="@font/roboto_medium"
            app:drawableEndCompat="@drawable/pass_arrow" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:alpha="0.5"
            android:background="@drawable/line_dash" />

        <TextView
            android:id="@+id/tv_invite_member"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="15dp"
            android:text="@string/invite_your_friends"
            android:textSize="18sp"
            android:textColor="@color/text_color"
            android:fontFamily="@font/roboto_medium"
            app:drawableEndCompat="@drawable/pass_arrow" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:alpha="0.5"
            android:background="@drawable/line_dash" />

    </LinearLayout>


</LinearLayout>